<!--
 *  Used in ModuleLoaderTest.testInvalidEntries to verify handling of badly formed module definitions.
 -->
<manifest>
    <module name="dummy" class="org.primitive.logging.LogbackLoggingModule">
        <configuration>
            <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
                <!-- encoders are assigned the type
                     ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
                <encoder>
                    <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
                </encoder>
            </appender>

            <root level="debug">
                <appender-ref ref="STDOUT" />
            </root>
        </configuration>
    </module>

    <module name="invalid" class="invalid" />
    <module />
    <module name="dummy" class="org.primitive.ml.TestModule" />
    <module name="rootModuleEvents" class="org.primitive.message.MessageModule"/>
</manifest>